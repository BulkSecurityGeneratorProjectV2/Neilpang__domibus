<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:util="http://www.springframework.org/schema/util"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/util
       http://www.springframework.org/schema/util/spring-util.xsd">
	
	<bean id="notifyBackendEtrustexQueue" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName" value="jms/domibus.notification.etrustex" />
	</bean>
	<bean id="businessMessageEtrustexInQueue" class="org.springframework.jndi.JndiObjectFactoryBean">
        	<property name="jndiName" value="jms/domibus.backend.etrustex.inQueue"/>
    	</bean>
	
	<bean id="backendEtrustex" class="eu.domibus.plugin.etrustex.BackendEtrustexImpl">
	        <constructor-arg value="Etrustex"/>
	        <property name="lister" ref="etrustexNotificationListenerService"/>
	        <property name="messageSubmissionTransformer" ref="etrustexMessageTransformer"/>
	        <property name="messageRetrievalTransformer"  ref="etrustexMessageTransformer"/>
		<property name="etxWrapperClient"  	ref="etxWrapperClient"/>
		<property name="etxBundleClient"  	ref="etxBundleClient"/>
	</bean>
	<bean id="etrustexMessageTransformer" class="eu.domibus.plugin.etrustex.mappers.EtrustexMessageTransformer"/>

    	<bean id="etrustexNotificationListenerService"
          class="eu.domibus.submission.WeblogicNotificationListenerService"
          c:queue-ref="notifyBackendEtrustexQueue" c:mode="PUSH"
          p:backendConnector-ref="backendEtrustex">
		<property name="queueJndi" value="jms/domibus.notification.etrustex"/>
	</bean>
	
	<bean id="jndiDestinationResolver" class="org.springframework.jms.support.destination.JndiDestinationResolver">
		<property name="fallbackToDynamicDestination" value="true"/>
	</bean>
	
	<bean id="backendEtrustexListenerContainerFactory"
          class="org.springframework.jms.config.DefaultJmsListenerContainerFactory">
        <property name="connectionFactory"
                  ref="domibusJMS-XAConnectionFactory"/>
		<property name="transactionManager" ref="transactionManager"/>
        <property name="destinationResolver" ref="jndiDestinationResolver"/>
        <property name="concurrency" value="1-1"/>
        <property name="sessionTransacted" value="true"/>
        <property name="sessionAcknowledgeMode" value="0"/>
    </bean>
	<bean id="pluginToBackendQueue" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName" value="jms/domibus.backend.jms.replyQueue" />
	</bean>
	<bean id="businessMessageOutQueue" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName" value="jms/domibus.backend.jms.outQueue" />
	</bean>
	<bean id="errorNotifyConsumerQueue" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName" value="jms/domibus.backend.jms.errorNotifyConsumer" />
	</bean>
	<bean id="errorNotifyProducerQueue" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName" value="jms/domibus.backend.jms.errorNotifyProducer" />
	</bean>
 
	<!-- Document Wrapper Service -->
	<bean id="etxWrapperClient" class="ec.services.wsdl.documentwrapper_2.DocumentWrapperPortType" factory-bean="clientWrapperFactory" factory-method="create"/>
    <bean id="clientWrapperFactory" class="org.apache.cxf.jaxws.JaxWsProxyFactoryBean">
	    <!--<property name="wsdlURL" value="file://C:/wls12130/user_projects/domains/mydomain/conf/domibus/wsdl/wsdl/DocumentWrapper-2.0.wsdl"/>-->
        <property name="serviceClass" value="ec.services.wsdl.documentwrapper_2.DocumentWrapperPortType"/>
        <property name="address" value="http://wltdig07.cc.cec.eu.int:1043/etrustex/services"/>
		<property name="username" value="euceg_gw_user"/>
		<property name="password" value="etrustex"/>
    </bean>
	<!-- Document Bundle Service -->
	<bean id="etxBundleClient" class="ec.services.wsdl.documentbundle_2.DocumentBundlePortType" factory-bean="clientBundleFactory" factory-method="create"/>
    <bean id="clientBundleFactory" class="org.apache.cxf.jaxws.JaxWsProxyFactoryBean">
        <!--<property name="wsdlURL" value="file://C:/wls12130/user_projects/domains/mydomain/conf/domibus/wsdl/wsdl/DocumentBundle-2.0.wsdl"/>-->
		<property name="serviceClass" value="ec.services.wsdl.documentbundle_2.DocumentBundlePortType"/>
        <property name="address" value="http://wltdig07.cc.cec.eu.int:1043/etrustex/services"/>
		<property name="username" value="euceg_gw_user"/>
		<property name="password" value="etrustex"/>
    </bean>



    <bean id="replyJmsTemplate"
          class="org.springframework.jms.core.JmsTemplate"
          c:connectionFactory-ref="domibusJMS-XAConnectionFactory"
          p:defaultDestination-ref="pluginToBackendQueue"
          p:sessionTransacted="true"
          p:sessionAcknowledgeMode="0"/>

    <bean id="mshToBackendTemplate"
          class="org.springframework.jms.core.JmsTemplate"
          c:connectionFactory-ref="domibusJMS-XAConnectionFactory"
          p:defaultDestination-ref="businessMessageOutQueue"
          p:sessionTransacted="true"
          p:sessionAcknowledgeMode="0"/>

    <bean id="errorNotifyConsumerTemplate"
          class="org.springframework.jms.core.JmsTemplate"
          c:connectionFactory-ref="domibusJMS-XAConnectionFactory"
          p:defaultDestination-ref="errorNotifyConsumerQueue"
          p:sessionTransacted="true"
          p:sessionAcknowledgeMode="0"/>

    <bean id="errorNotifyProducerTemplate"
          class="org.springframework.jms.core.JmsTemplate"
          c:connectionFactory-ref="domibusJMS-XAConnectionFactory"
          p:defaultDestination-ref="errorNotifyProducerQueue"
          p:sessionTransacted="true"
          p:sessionAcknowledgeMode="0"/>

	<!-- eTrustex properties -->
	<util:properties id="eTrustexProperties">
		<prop key="eTrustex.sender_role">http://docs.oasis-open.org/ebxml-msg/ebms/v3.0/ns/core/200704/initiator</prop>
		<prop key="eTrustex.receiver_role">http://docs.oasis-open.org/ebxml-msg/ebms/v3.0/ns/core/200704/responder</prop>
		<prop key="eTrustex.party_ns">urn:oasis:names:tc:ebcore:partyid-type:unregistered:</prop>
		<prop key="eTrustex.serviceName">ConnectivityService</prop>
		<prop key="eTrustex.service_type">EU-CEG</prop>
		<prop key="eTrustex.originalSender">urn:oasis:names:tc:ebcore:partyid-type:unregistered:C4</prop>
		<prop key="eTrustex.finalRecipient">urn:oasis:names:tc:ebcore:partyid-type:unregistered:C1</prop>
		<prop key="eTrustex.outbound_action">SubmitMessage</prop>
		<prop key="eTrustex.wrapper_type">BINARY</prop>
		<prop key="eTrustex.payload.contentId">cid:message</prop>
	</util:properties>


</beans>
